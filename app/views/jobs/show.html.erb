<div class="container">
  <%= flash[:notice] %>
  <h4><%= link_to t('job.job_back'), jobs_path %></h4>
  <h2><%= t('job.job_details') %></h2>
  <br>
  <table class="table table-striped">
    <tbody>
    <tr>
      <th><%= t('job.job_name') %></th>
      <td><%= @job.title %></td>
    </tr>
    <tr>
      <th><%= t('job.job_des') %></th>
      <td>
          - <%=@job.job_description.split(",").join("<br> -").html_safe %>
          <%#=@job.job_description[0] %>
      </td>
    </tr>
    <tr>
      <th><%= t('job.job_res') %></th>
      <td><%# @job.responsibilities.split(",").join("<br>").html_safe %></td>
    </tr>
    <tr>
      <th><%= t('job.job_edu_req') %></th>
      <td><%= @job.edu_requirement %></td>
    </tr>
    <tr>
      <th><%= t('job.job_exp_req') %></th>
      <td><%= @job.exp_requirement %></td>
    </tr>
    <tr>
      <th><%= t('job.job_rem') %></th>
      <td><%= @job.remuneration %></td>
    </tr>
    <tr>
      <th><%= t('job.job_loc') %></th>
      <td><%= @job.location %></td>
    </tr>

    <tr>
      <th><%= t('job.job_ben') %></th>
      <td><%= @job.benefits %></td>
    </tr>

    <tr>
      <th><%= t('job.job_deadline') %></th>
      <td><%= @job.deadline %></td>
    </tr>
    <tr>
      <th><%= t('job.job_date_issue') %></th>
      <td><%= @job.date_issue %></td>
    </tr>
    <tr>
      <th><%= t('job.job_status') %></th>
      <td><%= @job.job_status %></td>
    </tr>
    <tr>
      <th><%= t('job.job_emp_notice') %></th>
      <td><%= @job.employer_notice %></td>
    </tr>
    </tbody>
  </table>
</div>

