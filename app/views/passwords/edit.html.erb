<div id="clearance" class="password-reset">
  <br /><br />
  <div class="card">
    <div class="container">
      <h2><%= t(".title") %></h2>
      <p><%= t(".description") %></p>
      <%= simple_form_for :password_reset,
                   url: user_password_path(@user, token: @user.confirmation_token),
                   html: { method: :put } do |f| %>
          <div class="password-field">
            <%= f.input :password %>
          </div>
          <div class="submit-field">
            <%= f.submit %>
          </div>
      <% end %>
    </div>
      <br />
  </div>
</div>
