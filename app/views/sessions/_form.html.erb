<%= simple_form_for :session, url: session_path do |f| %>
    <%= f.error_notification %>
    <%= f.input :email, placeholder: 'userdomain.com', label: t('shared.all.email') %>
    <%= f.input :password, label: t('shared.all.password')%>
    <%= f.button :submit, t('users.new.sign_in') %>
    <div class="other-links">
      <%= link_to t('.forgot_password'), new_password_path %>
    </div>
<% end %>
